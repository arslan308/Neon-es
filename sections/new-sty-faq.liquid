<script>
function toggleAccordion(element) {
  let allItems = document.querySelectorAll('.accordion-item2');

  allItems.forEach(item => {
    let content = item.querySelector('.accordion-content2');
    let icon = item.querySelector('.accordion-icon2');

    if (item.contains(element)) {
      let isActive = item.classList.contains('active');
      allItems.forEach(i => {
        i.classList.remove('active');
        i.querySelector('.accordion-content2').style.display = 'none';
        i.querySelector('.accordion-icon2').style.transform = 'rotate(0deg)';
      });

      if (!isActive) {
        item.classList.add('active');
        content.style.display = 'block';
        icon.style.transform = 'rotate(180deg)';
      }
    }
  });
}

// Ensure the first accordion is open on page load
document.addEventListener("DOMContentLoaded", function() {
  let firstItem = document.querySelector(".accordion-item2");
  if (firstItem) {
    firstItem.classList.add("active");
    firstItem.querySelector(".accordion-content2").style.display = "block";
    firstItem.querySelector(".accordion-icon2").style.transform = "rotate(180deg)";
  }
});
</script>

