<div class="container secondry-tabs-section">
  <div class="accordion-video-wrapper">
    <!-- Right Side: Video (Shown Only If URL Exists) -->
    {% if section.settings.video_url != blank %}
      <div class="faq-video" style="width: 100%; display: grid ; grid-template-columns: 1fr 1fr 1fr; grid-gap: 10px;">
        <video style="border-radius: 8px; aspect-ratio: 9 / 16; width: 100%;" autoplay muted playsinline loop controls>
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
        <video style="border-radius: 8px; aspect-ratio: 9 / 16; width: 100%;" autoplay muted playsinline loop controls>
          <source src="{{ section.settings.video_url2 }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
        <video style="border-radius: 8px; aspect-ratio: 9 / 16; width: 100%;" autoplay muted playsinline loop controls>
          <source src="{{ section.settings.video_url3 }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div> 
    {% endif %}

    <!-- Left Side: Accordion -->
    <div class="accordion">
      {% comment %} <div class="tabs-title" style="margin-bottom: 24px;">{{ section.settings.tab_section_title }}</div> {% endcomment %}
      {% for block in section.blocks %}
        <div class="accordion-item2 {% if forloop.first %}active{% endif %}">
          <div class="accordion-header" onclick="toggleAccordion(this)">
            <span class="accordion-title">{{ block.settings.title }}</span>
            <img class="accordion-icon2" src="https://cdn.shopify.com/s/files/1/0779/7686/3066/files/keyboard_arrow_up_1.png?v=1741977186" alt="Toggle">
          </div>
          <div class="accordion-content2" style="display: {% if forloop.first %}block{% else %}none{% endif %};">
            <p>{{ block.settings.content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
