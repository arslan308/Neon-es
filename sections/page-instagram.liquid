<style>
    .page-insta-text-block {
    border-radius: 20px 20px 0 0;
    background: #2c3345;
    display: flex;
    justify-content: center;
    padding: 16px;
    align-items: center;
    color: #fff;
    text-align: center;
    font-size: 22px;
    line-height: 34px;
    flex-wrap: wrap;
  }

  .page-insta-text-block a {
    margin-right: 10px;
  }

  .page-insta-text-block svg {
    width: 24px;
    height: 24px;
    margin-left: 10px;
    margin-right: 8px;
  }
  .page-instagram-section{background: #f7f4f1;}
  </style>
<div class="page-instagram-section ">
  <div class="page-instagram-header">
    <div class="insta-inner-heading container">
      <div class="page-insta-text-block ">
        {{ section.settings.title }}
      </div>
    </div>
  </div>
  <div class="instagram-feed-image ">
    <div class="insta-feed-slider">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <div class="insta-feed-item">
            <a href="{{ block.settings.link }}">
              {% if block.settings.image != blank %}
                {%- assign image_url_3 = block.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', class: 'insta-feed-img', sizes: 'min(100vw, 520px)', widths: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' -%}
                {{image_url_3}}
              {% endif %}
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
<script>
   $('.insta-feed-slider').slick({
  dots: false,
  infinite: false,
  arrows:false,
  speed: 300,
  slidesToShow: 5,
  slidesToScroll: 1,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1,
        infinite: true,
        dots: false
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
        infinite: true
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
        infinite: true
      }
    }
  ]
});
</script>
{% schema %}
{
  "name": "Insta Feed",
  "settings": [
    {
      "type":"textarea",
      "id":"title",
      "label":"Heading"
    }
  ],
  "blocks":[
    {
      "type":"image",
      "name":"Image",
      "settings":[
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
        },
        {
          "type":"url",
          "id":"link",
          "label":"Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Insta Feed"
    }
  ]
}
{% endschema %}
