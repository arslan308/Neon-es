
<section class="about-banner">
  <div class="banner-bg aboutback-banner">
    <div class="container">
        <h1>{{ section.settings.banner_heading }}</h1>
        <div class="video-wrapper">
            <div class="video-container" id="video-container">
            <video controls id="video" playsinline preload="false"   tabindex="0">
                <source src="" type="video/mp4">
            </video>   
            <iframe width="560" height="315" src="{{ section.settings.youtube_video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
        </div>
    </div>
  </div>
</section>
<style>
    .banner-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background-image: url("https://cdn.shopify.com/s/files/1/0446/7376/1431/files/mask-group_3fb32ce4-0ea3-4968-a39d-fbaa3ae238ad.jpg?v=1676261458");
    width: 100%;
    height: 90%;
    z-index: -1;
    background-size: cover;
    background-position-y: bottom;
  }
</style>
{% schema %}
{
    "name": "About Banner",
    "settings": [
        {
        "type": "text",
        "id": "banner_heading",
        "label": "Banner Heading"
        },
        {
        "type": "url",
        "id": "youtube_video",
        "label": "Youtube Video"
        }
    ],
    "presets": [
    {
      "name": "About Banner",
      "settings": {}
    }
  ]
}
{% endschema %}