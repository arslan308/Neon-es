<div class="top-banner-sections">
  <div
    class="banner-background-top custom-banner-page"
    style="background-image: url({{ section.settings.back_img | img_url:'master' }})!important; background-size: cover;"
  >
    <div class="container">
      <div class="overlay-image-and-form">
        {%- assign overlay_img = section.settings.overlay_img
          | image_url: width: section.settings.image.width
          | image_tag:
            loading: 'lazy',
            class: 'image-1',
            sizes: 'min(100vw, 520px)',
            widths: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000'
        -%}
        <div class="overlay-image">
          {%- if section.settings.overlay_img -%}
            {{ overlay_img }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        <div class="top-banner-form-section" id="scrollhere">
          <script type="text/javascript" src="https://form.jotform.com/jsform/{{ section.settings.form_id }}"></script>
        </div>
      </div>
    </div>
    <div class="bottom-back-slider">
      <span class="slider-small-head">{{ section.settings.heading }}</span>
      <div class="main-slider-flex">
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div class="logo-item">
              {% if block.settings.logo_image != blank %}
                <img src="{{ block.settings.logo_image | img_url: 'master' }}">
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
  body.template-page {
        overflow-x: hidden;
        max-width: 100%;
  }
  .overlay-image-and-form{
    width: 100%;
    position: relative;
    padding: 30px 0 0;
    justify-content: space-between;
    display: grid;
    grid-template-columns: 50% 50%;
    align-items: start;
  }
  .overlay-image-and-form .overlay-image img{
    height: 762px;
    object-fit: contain;
    object-position: top;
  }
  .top-banner-sections .overlay-iamge .overlay-image-client{
    height: 762px;
    object-fit: contain;
    object-position: top;
  }
  .main-slider-flex.slick-initialized.slick-slider{margin-bottom: 0;}
  .top-banner-sections .bottom-back-slider{padding: 40px 0; border-top: 1px solid rgba(255,255,255,.5);}
  body .main-slider-flex .slick-track{
    display: flex;
    justify-content: space-between !important;
    align-items: center;
    margin: auto;
    gap: 40px;
  }
  span.slider-small-head{
    color: #fff;
    text-align: center;
    font-size: 22px;
    display: flex;
    margin-bottom: 40px;
    justify-content: center;
  }
  .top-banner-form-section{
    background: #fff;
    border-radius: 20px;
    padding: 0 5px 20px;
  }
  @media only screen and (max-width: 767.9px){
    .top-banner-form-section{border-radius: 5px;}
    .overlay-image-and-form .overlay-image img{display: none; visibility: hidden;}
    html.supernova.isEmbeded .form-all{border-radius: 3px !important;}
    body .main-slider-flex .slick-track{grid-gap: 30px !important; }
     span.slider-small-head{font-size: 18px; margin-bottom: 20px;}
     .overlay-image-and-form .overlay-image {
        display: none;
        overflow: hidden;
        height: 0;
      }
      .overlay-image-and-form{
        display: inherit;
      }
  }
</style>
<script>
  $('.main-slider-flex').slick({
    dots: true,
    infinite: false,
    speed: 300,
    slidesToShow: 8,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 5,
          slidesToScroll: 1,
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 5,
          slidesToScroll: 1,
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
        }
      }
    ]
  });
</script>
{% schema %}
{
  "name": "top-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "back_img",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "overlay_img",
      "label": "Overlay Image"
    },
    {
      "type": "text",
      "id": "form_id",
      "label": "Form ID",
      "default": "231723350207042"
    },
    {
      "type": "header",
      "content": "Bottom Slider"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "top-banner-section",
      "category": "top-banner-section"
    }
  ]
}
{% endschema %}

